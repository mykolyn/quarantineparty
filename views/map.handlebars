{{!-- header --}}
<div>
    {{>header}}
</div>

{{!-- side bar --}}

<div class="row">
    <div class="col-md-3">
        <div class="side-nav">
            <div>
                <input class="ml-2 mt-4 country-input" placeholder="Enter Country">
                <button class="btn-sm btn-warning ml-2 mt-2 submit" type="submit">Search</button>
            </div>

            {{!-- filter area --}}
            <div>
                <p class="ml-2">Filters</p>
                <ul>
                    <li id="death">death</li>
                    <li id="infected">infected</li>
                    <li id="recovered">recovered</li>
                    <li class="disabled">age</li>
                </ul>
            </div>
            {{!-- us census --}}
            <div>
                <p class="ml-2">US Census Data</p>
                <ul>
                    <li class="disabled">county</li>
                    <li class="disabled">sex</li>
                    <li class="disabled">household income</li>
                    <li class="disabled">school district</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-9 map-container">
        <h5>Map</h5>
        <p>Enter a country to change the view to that location.</p>
        <hr>
        <div id="mapid"></div>
    </div>

</div>


